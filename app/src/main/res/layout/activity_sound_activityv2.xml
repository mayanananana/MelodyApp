<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SoundActivityv2">

    <!-- TOOLBAR -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- CARÁTULA -->
    <ImageView
        android:id="@+id/imgCover"
        android:layout_width="307dp"
        android:layout_height="289dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/camp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout" />

    <!-- TÍTULO DE CANCIÓN -->

    <TextView
        android:id="@+id/txtSongTitle"
        android:layout_width="286dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:text="Nombre de la canción"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCover" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/txtSongTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CONTROLES -->
    <LinearLayout
        android:id="@+id/layoutControls"
        android:layout_width="310dp"
        android:layout_height="81dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seekBar">

        <!-- BACK -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="79dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:contentDescription="Anterior"
            android:src="@drawable/right_btn" />

        <!-- PLAY -->
        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="91dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="24dp"
            android:background="@android:color/transparent"
            android:contentDescription="Play"
            android:src="@drawable/play_btn" />

        <!-- NEXT -->
        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:contentDescription="Siguiente"
            android:src="@drawable/left_btn" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/volumeSeekBar"
        android:layout_width="221dp"
        android:layout_height="29dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutControls" />


</androidx.constraintlayout.widget.ConstraintLayout>
